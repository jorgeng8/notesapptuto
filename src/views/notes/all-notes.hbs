<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
        <div class="card-body">
            <h4 class="card-title d-flex justify-content-between align-items-center">
                {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
            </h4>
            <p>{{description}}</p>
            <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST"><!--Se concatena con el id de las notas -->
                <input type="hidden" name="_method" value="DELETE"> 
                <button class="btn btn-danger btn-block btn-sm" type="submit">
                    Delete
                 </button>
            </form>
        </div>
        </div>
    </div>
    {{else}}<!-- si no hay nada que recorrer-->
    <div class="card max-auto">
        <div class="card-body">
            <p class="lead">No hay notas aun</p>
            <a href="/notes/add" class="btn btn-success btn-block">Create one!</a>
        </div>
    </div>
    {{/each}}
</div>